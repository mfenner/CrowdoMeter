<td class="rating">
	<% if author_signed_in? and !(controller.action_name == "edit" and post.id == @post.id) %>
    <span class="post_links"><%= link_to_remote (image_tag("add_comment.gif") + (post.ratings.empty? ? " Classify" : " Change")), { :update => "index", 
                                     :url => edit_post_url(:id => post, :author_id => current_author.id, :page => params[:page], :q => params[:q]), 
                                     :method => :get },
                                     :title => "Classify this post" %></span>
  <% end %>
  <% unless post.ratings.empty? %>
	  <strong><%= pluralize(post.ratings.count, 'Classification') %></strong><br />
    <% if post.spam %>
      Spam
    <% else %>
	    <%= post.rhetoric.html_safe %>
	    <%= post.is_author.html_safe if post.is_author %>
	    <%= post.method.html_safe if post.method %>
	    <%= post.data.html_safe if post.data %>
	    <%= post.conclusions.html_safe if post.conclusions %>
    <% end %>
  <% end %>
</td>