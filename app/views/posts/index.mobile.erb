<div data-role="header">
	<h1>Tweets</h1>
  <%= link_to 'Results', ratings_path, "data-role" => "button", "class" => "ui-btn-right", "data-icon" => "grid" %>
</div>

<div data-role="content">
	<% unless @posts.empty? %>
	  <ul data-role="listview" data-theme="c">
	    <% @posts.each do |post| %>
	      <% if author_signed_in? %>
		    <li><a href="<%= new_rating_url(:post_id => post) %>"  class="signed_in">
		      <%= image_tag "http://api.twitter.com/1/users/profile_image/#{post.author}" %>
	        <h3><%= "@#{post.author}" %></h3>
					<%= post.body.html_safe %>
	        </a>
	      </li>
	      <% else %>
				  <li class="signed_out"><%= image_tag "http://api.twitter.com/1/users/profile_image/#{post.author}" %>
          <h3><%= "@#{post.author}" %></h3>
				  <%= post.body.html_safe %>
				</li>
	      <% end %>
	    <% end %>
	  </ul>
	<% end %>
</div>