<% if params[:service] == "scopus" and ((controller.action_name == "edit" or (controller.action_name == "update" and !@author.errors.empty?))) %>
  <div class="edit">
	  <%= remote_form_for :author, :update => "service", :url => author_url(:id => @author.username, :partial => "service", :service => "scopus"), :before => "Element.show('spinner');", :method => :put do |f| %>
    <h3>Scopus Author ID</h3>
		    <%= f.text_field :scopus %>
		  <p>
			  <%= link_to_remote "Cancel", :update => "service", :url => author_path(@author.username, :partial => "service"), :method => :get %>
		    <%= f.submit("Submit") %>
		    <%= image_tag 'spinner.gif', :id=>'spinner', :style=>"display:none;" %>
		<% end %>
	</div>
<% else %>
	  <%= image_tag "scopus.png", :class => "photo_mini", :title => "Scopus" %><br/>
		<span class="name"><%= @author.scopus.blank? ? "not set" : link_to(@author.scopus, "http://scopus.org/profile/" + @author.scopus) %></span>
		<% if current_author == @author or current_author.try(:admin?) %>&nbsp;<%= link_to_remote image_tag("edit.gif"), { :update => "service", 
		                                       :url => edit_author_path(@author.username, :partial => "service", :service => "scopus"),
		                                       :method => :get },
		                                       :title => "Edit Scopus" %>
		<% end %>
<% end %>